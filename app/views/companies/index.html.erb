<h1 style="padding:0px 0px 10px 0px ; text-align:center;"><b>Listing companies</b></h1>
<table align="center">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Employees</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.address %></td>
    <td><%= company.phone %></td>
    <%#= link_to 'Products',admin_category_products_path(category, @product)  %>
    <td><%= link_to 'Employees',company_employees_path(company, @employee) %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%#= button_to "delete", company, :method=>:delete, confirm: 'Are you sure?', :class=>:destroy %></td>
    <td><%= link_to 'Delete', [company], :confirm => 'Are you sure?', :method => :delete %><td>
    </tr>
<% end %>
</table>
<div style="float:right">
     <%= will_paginate @company %>          
</div>

